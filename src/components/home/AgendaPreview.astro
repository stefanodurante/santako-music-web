---
import { content } from "../../data/mock/content";
import Tag from "../ui/Tag.astro";

const upcoming = content.filter((item) => item.type === "EVENTO");
---

<section class="px-6 md:px-12 xl:px-24 py-24 container-wide">
  <header class="flex items-end justify-between mb-6">
    <h2 class="font-heading text-4xl">Agenda</h2>
    <a href="/agenda" class="underline"> Ver agenda completa </a>
  </header>

  <ul class="space-y-4">
    {
      upcoming.map((event) => (
        <li class="flex items-center justify-between border-b pb-4">
          <div>
            <Tag label="Evento" variant="event" />
            <h3 class="font-heading text-xl mt-2">{event.data.title}</h3>
          </div>

          {event.data.date && <span class="opacity-60">{event.data.date}</span>}
        </li>
      ))
    }
  </ul>
</section>
