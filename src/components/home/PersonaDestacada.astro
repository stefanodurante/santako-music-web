---
import { content } from "../../data/mock/content";
import Tag from "../ui/Tag.astro";

const featured = content.find((item) => item.type === "PERSONA");
---

{featured && (
  <section id="artista-destacado" class="section-featured px-6 md:px-12 xl:px-24 py-24">
    <div class="max-w-6xl mx-auto grid md:grid-cols-2 gap-16 items-center">
      <img
        src={featured.data.images?.[0]}
        alt={featured.data.title}
        class="w-full h-[420px] object-cover rounded-lg"
      />

      <div>
        <Tag label="Artista destacado" variant="person" />
        <h2 class="font-heading text-4xl mt-4">
          {featured.data.title}
        </h2>
        <p class="mt-4 max-w-md opacity-80">
          {featured.data.bio}
        </p>

        <a
          href={`/persona/${featured.data.slug}`}
          class="inline-block mt-6 text-sm uppercase tracking-widest border-b border-black pb-1 hover:opacity-70 transition"
        >
          Ver perfil
        </a>
      </div>
    </div>
  </section>
)}
