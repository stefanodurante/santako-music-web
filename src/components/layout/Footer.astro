---
import LogoEditorial from "../ui/LogoEditorial.astro";
---

<footer id="footer" class="section-footer mt-24" style="background-color: var(--color-dark); color: white;">
  <div
    class="max-w-7xl mx-auto px-6 md:px-12 xl:px-24 py-16 grid grid-cols-1 md:grid-cols-3 gap-12"
  >
    <!-- BLOQUE 1: LOGO + DESCRIPCIÓN -->
    <div>
      <div class="mb-6">
        <LogoEditorial size="md" />
      </div>
      <p class="text-sm text-white/60 max-w-xs">
        Asociación de músicos de Santa Coloma de Gramenet. Plataforma cultural dedicada a la música en vivo y la actividad creativa.
      </p>
    </div>

    <!-- BLOQUE 2: NAVEGACIÓN -->
    <div>
      <h3 class="text-xs uppercase tracking-widest text-white/40 mb-4">Navegación</h3>
      <ul class="space-y-3 text-sm">
        <li><a href="/agenda" class="hover:text-white/70 transition">Agenda</a></li>
        <li><a href="/personas" class="hover:text-white/70 transition">Personas</a></li>
        <li><a href="/podcast" class="hover:text-white/70 transition">Podcast</a></li>
        <li><a href="mailto:hola@santakomusic.com" class="hover:text-white/70 transition">Contacto</a></li>
      </ul>
    </div>

    <!-- BLOQUE 3: LEGAL -->
    <div>
      <h3 class="text-xs uppercase tracking-widest text-white/40 mb-4">Legal</h3>
      <ul class="space-y-3 text-sm text-white/60">
        <li><a href="/legal/aviso-legal" class="hover:text-white transition">Aviso legal</a></li>
        <li><a href="/legal/privacidad" class="hover:text-white transition">Política de privacidad</a></li>
        <li><a href="/legal/cookies" class="hover:text-white transition">Política de cookies</a></li>
      </ul>
    </div>
  </div>

  <!-- SUBFOOTER -->
  <div 
    class="border-t border-white/10 px-6 md:px-12 xl:px-24 py-6"
  >
    <div class="max-w-7xl mx-auto flex flex-col md:flex-row items-center justify-between gap-4">
      <!-- COPYRIGHT -->
      <p class="text-xs text-white/40">
        © {new Date().getFullYear()} Santako Music · Santa Coloma de Gramenet
      </p>

      <!-- REDES SOCIALES -->
      <div class="flex items-center gap-6">
        <a
          href="https://www.instagram.com/santakomusic/"
          target="_blank"
          rel="noopener noreferrer"
          class="text-white/60 hover:text-white transition"
          aria-label="Instagram"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
