---
interface Props {
  size?: "large" | "medium" | "small";
}

const { size = "medium" } = Astro.props as Props;

const sizes = {
  large: "col-span-2 row-span-2",
  medium: "col-span-2 row-span-1",
  small: "col-span-1 row-span-1",
};
---

<article class={`relative bg-white rounded-lg overflow-hidden ${sizes[size]}`}>
  <slot />
</article>
