---
interface Props {
  size?: "sm" | "md" | "lg";
  class?: string;
}

const { size = "md", class: className = "" } = Astro.props;

const sizes = {
  sm: "text-xl",
  md: "text-2xl",
  lg: "text-4xl md:text-5xl",
};
---

<a href="/" class={`font-heading uppercase tracking-tight ${sizes[size]} ${className}`}>
  Santako
  <span class="italic font-light normal-case ml-1"> Music </span>
</a>
