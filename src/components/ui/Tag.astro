---
interface Props {
  label: string;
  variant?: "event" | "person" | "live" | "podcast";
  floating?: boolean;
}

const { label, variant = "event", floating = false } = Astro.props as Props;

const bgColor = {
  event: "var(--color-accent-event)",
  person: "var(--color-accent-person)",
  live: "var(--color-accent-live)",
  podcast: "var(--color-accent-podcast)",
}[variant];

const textColor = variant === "live" ? "#000" : "#fff";

const floatingClasses = floating
  ? "absolute top-4 left-4 opacity-0 translate-y-2 transition-all duration-300 group-hover:opacity-100 group-hover:translate-y-0"
  : "";
---

<span
  class={`inline-block px-3 py-1 text-xs uppercase tracking-wide rounded-full font-body ${floatingClasses}`}
  style={`background-color: ${bgColor}; color: ${textColor};`}
>
  {label}
</span>
