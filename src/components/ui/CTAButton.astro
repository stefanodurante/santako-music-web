---
interface Props {
  label: string;
  href: string;
  variant?: "event" | "person";
}

const { label, href, variant = "event" } = Astro.props as Props;

const bg =
  variant === "person"
    ? "bg-[--color-accent-person]"
    : "bg-[--color-accent-event]";
---

<a
  href={href}
  class={`inline-block px-8 py-4 text-white font-body uppercase tracking-wide rounded-md transition hover:opacity-90 ${bg}`}
>
  {label}
</a>
