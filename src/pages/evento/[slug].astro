---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { content } from "../../data/mock/content";

export function getStaticPaths() {
  return content
    .filter((item) => item.type === "EVENTO")
    .map((item) => ({
      params: { slug: item.data.slug },
    }));
}

const { slug } = Astro.params;

const event = content.find(
  (item) => item.type === "EVENTO" && item.data.slug === slug,
);

if (!event) {
  throw new Error("Evento no encontrado");
}

const related = content.filter((item) =>
  event.data.related.includes(item.data.slug),
);
---

<BaseLayout title={event.data.title}>
  <article class="p-10 max-w-4xl">
    <h1 class="font-heading text-5xl mb-4">
      {event.data.title}
    </h1>

    {event.data.date && <p class="opacity-70 mb-10">{event.data.date}</p>}

    <section>
      <h2 class="font-heading text-2xl mb-4">Personas relacionadas</h2>

      <ul class="space-y-2">
        {
          related.map((item) => (
            <li>
              <a href={`/persona/${item.data.slug}`} class="underline">
                {item.data.title}
              </a>
            </li>
          ))
        }
      </ul>
    </section>
  </article>
</BaseLayout>
