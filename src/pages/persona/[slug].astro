---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Tag from "../../components/ui/Tag.astro";
import { content } from "../../data/mock/content";
import CTAButton from "../../components/ui/CTAButton.astro";

export function getStaticPaths() {
  return content
    .filter((item) => item.type === "PERSONA")
    .map((item) => ({
      params: { slug: item.data.slug },
    }));
}

const { slug } = Astro.params;

const person = content.find(
  (item) => item.type === "PERSONA" && item.data.slug === slug,
);

if (!person) throw new Error("Persona no encontrada");

const related = content.filter((item) =>
  person.data.related.includes(item.data.slug),
);
---

<BaseLayout title={person.data.title}>
  <!-- HERO -->
  <header class="relative h-[60vh] min-h-[420px]">
    <img
      src={person.data.image}
      alt={person.data.title}
      class="absolute inset-0 w-full h-full object-cover"
    />
    <div class="absolute inset-0 bg-black/50"></div>

    <div class="relative h-full flex items-end p-10 text-white max-w-6xl">
      <div>
        <Tag label={person.data.label} variant="person" />
        <h1 class="font-heading text-5xl mt-4">
          {person.data.title}
        </h1>
      </div>
    </div>
  </header>

  <!-- CONTENIDO -->
  <main class="p-10 max-w-3xl">
    {
      person.data.genres && (
        <ul class="flex flex-wrap gap-2 mb-6">
          {person.data.genres.map((genre) => (
            <li class="text-sm opacity-70 border px-3 py-1 rounded-full">
              {genre}
            </li>
          ))}
        </ul>
      )
    }

    {
      person.data.bio && (
        <p class="text-lg leading-relaxed mb-12">{person.data.bio}</p>
      )
    }

    <!-- ACTIVIDAD RELACIONADA -->
    <section>
      <h2 class="font-heading text-2xl mb-4">Actividad en Santako Music</h2>

      <ul class="space-y-3">
        {
          related.map((item) => (
            <li>
              <a
                href={`/${item.type === "EVENTO" ? "evento" : "podcast"}/${item.data.slug}`}
                class="underline"
              >
                {item.data.title}
              </a>
            </li>
          ))
        }
      </ul>
    </section>

    <section class="mt-16 p-8 bg-neutral-100 rounded-lg">
      <h3 class="font-heading text-2xl mb-4">
        ¿Quieres programar a {person.data.title}?
      </h3>

      <p class="max-w-md mb-6">
        Escríbenos y te ponemos en contacto con el artista.
      </p>

      <CTAButton
        label="Solicitar booking"
        variant="person"
        href={`mailto:booking@santakomusic.com?subject=Booking ${person.data.title}`}
      />
    </section>
  </main>
</BaseLayout>
