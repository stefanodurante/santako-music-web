---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getPageBySlug, decodeHtmlEntities } from "../../lib/wordpress";

/**
 * CARGA DESDE WORDPRESS
 */
const page = await getPageBySlug("politica-de-cookies");
const title = page ? decodeHtmlEntities(page.title.rendered) : "Política de Cookies";
---

<BaseLayout title={`${title} · Santako Music`} mode="interior">
  <section id="cookies" class="section-legal px-6 md:px-12 xl:px-24 py-24 max-w-4xl">
    <header class="mb-12">
      <h1 class="font-heading text-4xl md:text-5xl mb-4">{title}</h1>
    </header>

    {page ? (
      <div 
        class="prose prose-lg max-w-none wp-content"
        style="color: var(--color-text);"
        set:html={page.content.rendered}
      />
    ) : (
      <p class="opacity-70">Contenido no disponible temporalmente.</p>
    )}
  </section>
</BaseLayout>

<style is:global>
  .wp-content h2 {
    font-family: var(--font-heading);
    font-size: 1.5rem;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }
  .wp-content h3 {
    font-family: var(--font-heading);
    font-size: 1.25rem;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }
  .wp-content p {
    opacity: 0.8;
    line-height: 1.75;
    margin-bottom: 1rem;
  }
  .wp-content a {
    text-decoration: underline;
  }
  .wp-content ul {
    list-style: disc;
    padding-left: 1.5rem;
    margin-bottom: 1rem;
  }
  .wp-content li {
    opacity: 0.8;
    margin-bottom: 0.5rem;
  }
</style>
