---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getPageBySlug, decodeHtmlEntities } from "../../lib/wordpress";

/**
 * CARGA DESDE WORDPRESS
 */
const page = await getPageBySlug("politica-privacidad");

if (!page) {
  return Astro.redirect("/404");
}

const title = decodeHtmlEntities(page.title.rendered);
---

<BaseLayout title={`${title} Â· Santako Music`}>
  <section id="privacidad" class="section-legal px-6 md:px-12 xl:px-24 py-24 max-w-4xl">
    <header class="mb-12">
      <h1 class="font-heading text-4xl md:text-5xl mb-4">{title}</h1>
    </header>

    <div 
      class="prose prose-lg max-w-none wp-content"
      style="color: var(--color-text);"
      set:html={page.content.rendered}
    />
  </section>
</BaseLayout>

<style is:global>
  .wp-content h2 {
    font-family: var(--font-heading);
    font-size: 1.5rem;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }
  .wp-content p {
    opacity: 0.8;
    line-height: 1.75;
    margin-bottom: 1rem;
  }
  .wp-content a {
    text-decoration: underline;
  }
  .wp-content ul {
    list-style: disc;
    padding-left: 1.5rem;
    margin-bottom: 1rem;
  }
  .wp-content li {
    opacity: 0.8;
    margin-bottom: 0.5rem;
  }
</style>
