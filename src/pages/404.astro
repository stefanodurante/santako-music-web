---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Página no encontrada" mode="interior">
  <main class="min-h-[60vh] flex items-center justify-center px-6">
    <div class="text-center">
      <h1 class="text-6xl font-bold mb-4" style="font-family: var(--font-heading);">404</h1>
      <p class="text-xl mb-8">Página no encontrada</p>
      <a 
        href="/" 
        class="inline-block px-6 py-3 rounded-full text-white"
        style="background-color: var(--color-dark);"
      >
        Volver al inicio
      </a>
    </div>
  </main>
</BaseLayout>
