---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { content } from "../../data/mock/content";

const podcasts = content
  .filter((item) => item.type === "PODCAST")
  .sort((a, b) => (a.data.date < b.data.date ? 1 : -1));
---

<BaseLayout title="Podcast · Santako Music">
  <section class="px-6 md:px-12 xl:px-24 py-24 container-wide">
    <h1 class="font-heading text-5xl mb-10">Podcast Santako Music</h1>

    <p class="max-w-2xl text-lg opacity-80 mb-16">
      El Podcast Santako es una sesión mensual grabada en vídeo, donde
      conversamos con artistas y agentes culturales de la escena local.
    </p>

    <a
      href="https://www.youtube.com/@santakomusic"
      target="_blank"
      class="underline uppercase tracking-widest text-sm"
    >
      Ver canal en YouTube
    </a>

    {
      podcasts.length > 0 && (
        <section class="mt-24">
          <h2 class="font-heading text-3xl mb-8">Archivo de sesiones</h2>

          <ul class="space-y-8">
            {podcasts.map((podcast) => (
              <li>
                <a
                  href={`/podcast/${podcast.data.slug}`}
                  class="underline text-xl"
                >
                  {podcast.data.title}
                </a>
                <span class="block text-sm opacity-60">
                  {podcast.data.date}
                </span>
              </li>
            ))}
          </ul>
        </section>
      )
    }
  </section>
</BaseLayout>
